        if (!dayName) {
            showAlert('âŒ Ù„Ø·ÙØ§Ù‹ Ù†Ø§Ù… Ø±ÙˆØ² ØªÙ…Ø±ÛŒÙ†ÛŒ Ø±Ø§ ÙˆØ§Ø±Ø¯ Ú©Ù†ÛŒØ¯');
